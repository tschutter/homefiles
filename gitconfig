# git config file

[alias]
    # hist = one-line per commit log
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short

    # logv = log + names and status of changed files
    logv = log --name-status

    # stat = short status
    stat = status -s

    # unadd/unstage = remove files/directories from staging
    unadd = reset
    unstage = reset

    # visual = graphical repository browser
    visual = !gitk

    # smstat = submodule status
    smstat = submodule status --recursive

    # smup = submodule update
    smup = submodule update --init --recursive

[core]
    editor = mg

[github]
    user = tschutter
    token = $GITHUB_TOKEN

[log]
    abbrevCommit = true
    date = iso

[user]
    name = Tom Schutter
    email = t.schutter@comcast.net

[color]
    diff = auto
    status = auto
    ui = true

[push]
    # set default to push the current branch to a central branch of
    # the same name
    default = current
