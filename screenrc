# screen config file

# Set the command character to C-b like tmux.
escape ^Bb

# Change scrollback to 2000 lines
defscrollback 2000

# Status line at the bottom
hardstatus on
hardstatus alwayslastline
hardstatus string "%{.bW}%-w%{.rW}%n %t%{-}%+w %=%{..G}[%H %l]"

# Do not display copyright message at startup
startup_message off
