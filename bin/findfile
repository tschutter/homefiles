#!/bin/sh
#
# Directory tree file search
#

# Function that locates an executable.
# The first parameter is the executable filename.
# The second parameter is a variable that will hold the absolute pathname.
locate_exe() {
    if [ -x /usr/local/bin/$1 ]; then
        eval "$2=/usr/local/bin/$1"
    elif [ -x /usr/bin/$1 ]; then
        eval "$2=/usr/bin/$1"
    elif [ -x /bin/$1 ]; then
        eval "$2=/bin/$1"
    else
        echo "ERROR: Unable to locate the '$1' program."
        exit 2
    fi
}

# Locate executables.
locate_exe "find" FIND

usage() {
    echo "Searches for a file in the current directory and all subdirectories." >&2
    echo "" >&2
    echo "USAGE:" >&2
    echo "  $0 [options] FILENAME" >&2
    echo "" >&2
    echo "OPTIONS:" >&2
    echo "  -i = ignore case" >&2
    echo "  -l = use a long listing format" >&2
    echo "" >&2
    echo "EXAMPLES:" >&2
    echo "  $0 foo.c" >&2
    echo "  $0 '*.a'" >&2
}

ARGS=""
FIND_NAME_OPTION="-name"
PRINT_OPTION="-print"
for ARG in "$@"; do
    case ${ARG} in
        --help)
            usage
            exit 1
            ;;
        -i)
            FIND_NAME_OPTION="-iname"
            ;;
        -l)
            PRINT_OPTION="-ls"
            ;;
        *)
            ARGS="${ARGS} ${ARG}"
            ;;
    esac
done
if [ "${ARGS}" = "" ]; then
    usage
    exit 1
fi

for ARG in ${ARGS}; do
    /usr/bin/find\
        .\
        -name .svn -prune -o\
        -name .git -prune -o\
        -name CVS -prune -o\
        ${FIND_NAME_OPTION}\
        "${ARG}"\
        ${PRINT_OPTION}
done
