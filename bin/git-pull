#!/bin/sh
#
# Do a "git pull" wrapped with a stash push/pop.
#

if [ $# -gt 0 -o "$1" = "--help" ]; then
    echo "Pull from git remote." >&2
    echo "" >&2
    echo "USAGE:" >&2
    echo "  $0" >&2
    exit 1
fi

git stash push --keep-index --message "git-pull temp" --quiet\
  | grep "^No local changes to save$"
STASHED=$?

git pull

if [ ${STASHED} -eq 1 ]; then
  git stash pop --quiet
fi
